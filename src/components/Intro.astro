import { Image } from "astro:assets";
import logo from "@images/logo-full.svg";
---

<section aria-label="Intro" id="start">
  <div class="container">
    <h1 class="sr-only">Trve Peak Studio</h1>
    <Image
      alt="True Peak Studio logo"
      height={logo.height}
      loading="eager"
      src={logo}
      width={logo.width}
    />
    <p>
      Project studio based in Nuremberg, Germany. <span aria-hidden="true"
        >ðŸ‡©ðŸ‡ª</span
